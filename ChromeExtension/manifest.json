{
  "manifest_version": 2,

  "name": "Fantasy Football Data",
  "description": "This extension exports fantasy football data",
  "version": "1.0",

  "permissions": [
  	"tabs",
  	"storage",
  	"https://football.fantasysports.yahoo.com/"
  ],
  "content_scripts": [
  	{
      "matches": ["https://football.fantasysports.yahoo.com/*/players*"],
  		"js": ["js/common.js", "js/tools/traverse.js", "js/content/players.js"]
  	},
    {
      "matches": ["https://football.fantasysports.yahoo.com/*/starters"],
      "js": ["js/common.js", "js/content/rosters.js"]
    }
  ],
  "background": {
	 "scripts": ["js/common.js", "js/background.js"]
  },  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "pages/popup.html"
  }
}